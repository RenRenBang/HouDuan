<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.soecode.lyf.dao.TransactionDao">
	<!-- 目的：为dao接口方法提供sql语句配置 -->
	<select id="queryTransaction" resultType="com.soecode.lyf.entity.Cuser">
		select * from cuser 
		where 
		uphone = #{param1} 
		and 
		password = #{param2}
	</select>
	
	
	<insert id="addTransaction" parameterType="com.soecode.lyf.entity.Transaction">
		insert into transaction(
			oid,
			uid,
			t_time,
			release_uid)
		value(
		#{oid},#{uid},now(),#{releaseUid})
	</insert>
	
	<!-- void updatecuser(Cuser cuser); -->
	<update id="updateCuser">
		update cuser set
		password=#{password}
		where uid = #{uid}
	</update>
	<!-- Cuser findByid(int uid); -->
	<select id="findByid" parameterType="com.soecode.lyf.entity.Cuser" resultType="com.soecode.lyf.entity.Cuser">
		select * from cuser 
		where 
		uid = #{uid}
	</select>
</mapper>